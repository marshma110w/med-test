<div class="container face">
  <div class="row justify-content-end">
    <div class="col-2">
      <%= link_to 'Панель администратора', '/login', method: :get, class: 'float-end' %>
    </div>
  </div>

  <div class="row main-code-input">
    <div class="offset-4 col-4">
      <%= form_with url: { action: 'by_code' }, method: :get, class: 'form' do |form| %>
        <div class="form-group input-group">
          <%= form.text_field :code, class: 'form-control', id: 'big-code', placeholder: 'Код от организатора' %>
          <%= form.submit "Присоединиться", class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>

