<div class="container admin">
  <% flash.each do |k, v| %>
    <%= tag.div v, class: "alert alert-#{k} mt-0", role: 'alert' %>
  <% end %>
  <div class="row">
    <div class="mt-5 col-4 offset-4 border rounded p-3" id="admin-form">
      <h1>Авторизация администратора</h1>
      <div class="row">
        <%= form_with model: @admin, class: 'form' do |form| %>
          <div class="form-group pb-2">
            <%= form.label :username, 'Логин' %>
            <%= form.text_field :username, class: 'form-control' %>
          </div>
          <div class="form-group pb-2">
            <%= form.label :password, 'Пароль' %>
            <%= form.text_field :password, class: 'form-control', type: 'password' %>
          </div>
          <div class="row justify-content-end mx-1">
            <%= form.submit 'Войти', class: 'btn btn-dark mt-2 col-3' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>